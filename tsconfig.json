{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"]
    },
    "types": ["bun-types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
